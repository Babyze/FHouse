<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.habp.fhouse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_fhouse_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_fhouse_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FHouse">
        <activity android:name=".ui.search.SearchActivity"></activity>
        <activity android:name=".ui.boarding.house.update.UpdateHouseActivity" />
        <activity android:name=".ui.boarding.room.update.UpdateRoomActivity" />
        <activity android:name=".ui.boarding.bed.update.UpdateBedActivity" />
        <activity android:name=".ui.boarding.bed.create.CreateBedActivity" />
        <activity android:name=".ui.boarding.room.create.CreateRoomActivity" />
        <activity android:name=".ui.boarding.house.create.CreateHouseActivity" />
        <activity android:name=".ui.articledetail.ArticleDetailActivity" />
        <activity android:name=".ui.sign.SignInActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.firsttime.FirstTimeActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>